<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BannerlordImageTool.Win.Controls.LoadingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BannerlordImageTool.Win.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <AcrylicBrush
            x:Key="LoadingBackgroundStyle"
            FallbackColor="#FF000000"
            TintColor="#FF000000"
            TintOpacity=".7" />
    </UserControl.Resources>

    <Grid>
        <controls:Loading x:Name="loadingControl" Background="{StaticResource LoadingBackgroundStyle}">
            <StackPanel Padding="12" Orientation="Horizontal">
                <ProgressRing
                    Margin="0,0,12,0"
                    Foreground="CadetBlue"
                    IsActive="True" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="{x:Bind Message, Mode=OneWay}" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</UserControl>
