<rxui:ReactiveUserControl
    x:Class="BLIT.Views.Settings.BannerSettingsSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BLIT.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:service="clr-namespace:BLIT.Services"
    xmlns:vm="clr-namespace:BLIT.ViewModels.Banner"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
    d:DesignHeight="800"
    d:DesignWidth="800"
    d:Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
    x:TypeArguments="vm:BannerSettingsViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Styles/GridSectionStyles.xaml" />
    </UserControl.Resources>
    <Grid Style="{StaticResource SectionGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Style="{StaticResource SectionTitleStyle}">
            Banner Settings
        </TextBlock>
        <!--  Scan folders  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            MaxWidth="400">
            <StackPanel>
                <Label Style="{StaticResource ItemLabelStyle}">Sprite scan paths</Label>
                <TextBlock Style="{StaticResource VerticalCaptionStyle}">
                    Manage the relative paths to folders where the sprites are likely to be found.
                    The relative paths are based on the texture import location.
                </TextBlock>
            </StackPanel>
        </Border>
        <!--  Sprite scan paths editor  -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StackPanel>
                <Button
                    x:Name="btnAdd"
                    Margin="0,0,0,8"
                    Padding="8,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource MahApps.Styles.Button.Square}">
                    Add
                </Button>
                <ListBox
                    x:Name="listScanPaths"
                    Height="150"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    SelectionMode="Single" />
            </StackPanel>
        </Border>

        <!--  Group start ID  -->
        <Border Grid.Row="3" Grid.Column="0">
            <StackPanel>
                <Label Style="{StaticResource ItemLabelStyle}">Custom group start ID</Label>
                <TextBlock Style="{StaticResource VerticalCaptionStyle}">
                    Ranged from 7 to 99999.
                    Larger IDs are recommended to prevent conflicts with other mods.
                    Note that 1 to 6 are used by the native game.
                </TextBlock>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="3"
            Grid.Column="1"
            Padding="0,4,0,0"
            VerticalAlignment="Top">
            <xctk:IntegerUpDown
                x:Name="numGroupStartID"
                Width="150"
                Maximum="{x:Static service:BannerSettings.MAX_CUSTOM_GROUP_ID}"
                Minimum="{x:Static service:BannerSettings.MIN_CUSTOM_GROUP_ID}" />
        </Border>
        <!--  Color start ID  -->
        <Border Grid.Row="4" Grid.Column="0">
            <StackPanel>
                <Label Style="{StaticResource ItemLabelStyle}">Custom color start ID</Label>
                <TextBlock Style="{StaticResource VerticalCaptionStyle}">
                    Ranged from 194 to 999999.
                    Larger IDs are recommended to prevent conflicts with other mods.
                    Note that 0 to 193 are used by the native game.
                </TextBlock>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="4"
            Grid.Column="1"
            Padding="0,4,0,0"
            VerticalAlignment="Top">
            <xctk:IntegerUpDown
                x:Name="numColorStartID"
                Width="150"
                Maximum="{x:Static service:BannerSettings.MAX_CUSTOM_COLOR_ID}"
                Minimum="{x:Static service:BannerSettings.MIN_CUSTOM_COLOR_ID}" />
        </Border>
    </Grid>
</rxui:ReactiveUserControl>
