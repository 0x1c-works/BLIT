<rxui:ReactiveUserControl
    x:Class="BLIT.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BLIT.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    d:Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
    x:TypeArguments="local:HomeViewModel"
    DataContext="{Binding}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock FontSize="{StaticResource MahApps.Font.Size.Header}">
            Welcome,<Span><Run x:Name="txtTarget">(Target)</Run></Span>
            !</TextBlock>
        <TextBlock Margin="0,32,0,0">
            Please visit the&#160;<Hyperlink x:Name="linkWebsite">website</Hyperlink>
            &#160;to learn how to use.</TextBlock>
    </StackPanel>
</rxui:ReactiveUserControl>
