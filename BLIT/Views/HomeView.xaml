<local:HomeViewBase
    x:Class="BLIT.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BLIT.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock>
            Welcome,<Span><Run x:Name="txtTarget">(Target)</Run></Span>
            !</TextBlock>
        <TextBlock>
            Please visit the<Hyperlink x:Name="linkWebsite">website</Hyperlink>
            to learn how to use.</TextBlock>
    </StackPanel>
</local:HomeViewBase>
